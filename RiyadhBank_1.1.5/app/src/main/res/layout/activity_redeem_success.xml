<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionBar"
        layout="@layout/custom_actionbar" />

    <LinearLayout
        android:id="@+id/loutNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/D_150dp"
            android:layout_height="@dimen/D_150dp"
            android:layout_marginBottom="@dimen/D_30dp"
            android:src="@drawable/success" />

        <com.riyadhbank.Custom.RBRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/success_msg"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/D_18dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_green_solid"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <com.riyadhbank.Custom.RBRegularTextView
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/loutFooter"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/D_65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/chandLout"
            android:layout_width="@dimen/D_70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/icn_chand_grey"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lout_favourite"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="0.18"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/D_30dp"
                    android:layout_marginTop="@dimen/D_14dp"
                    android:padding="@dimen/D_2dp"
                    android:src="@drawable/ic_favourite" />

                <com.riyadhbank.Custom.RBRegularTextView
                    android:id="@+id/txt_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/favourite"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/D_12dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>