<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyTint">

    <include
        android:id="@+id/actionBar"
        layout="@layout/custom_actionbar" />

    <LinearLayout
        android:id="@+id/loutProfileUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loutFooter"
        android:layout_below="@+id/actionBar"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_theme"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/user" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/first_name"
                android:singleLine="true"
                android:textColor="@color/themeColor"
                android:textColorHint="@color/themeColorTint"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_theme"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/user_white"
                android:tint="@color/themeColor" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/last_name"
                android:singleLine="true"
                android:textColor="@color/themeColor"
                android:textColorHint="@color/themeColorTint"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_theme"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/user_white"
                android:tint="@color/themeColor" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/username"
                android:singleLine="true"
                android:textColor="@color/themeColor"
                android:textColorHint="@color/themeColorTint"
                android:textSize="14dp"
                android:imeOptions="actionNext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_grey"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_email_white"
                android:tint="@color/grey" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:background="@color/transparent"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_grey"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_profile"
                android:tint="@color/grey" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtEmpId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:background="@color/transparent"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="@string/employee_id"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_grey"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_call_white"
                android:tint="@color/grey" />

            <com.riyadhbank.Custom.RBRegularEditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:enabled="false"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/mobile_number"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="14dp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProfileUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/D_15dp">

            <com.riyadhbank.Custom.RBRegularTextView
                android:id="@+id/btnProfileUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_theme_solid"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/profile_update"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/loutFooter"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/D_65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/chandLout"
            android:layout_width="@dimen/D_70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/icn_chand_grey"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lout_favourite"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="0.18"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/D_30dp"
                    android:layout_marginTop="@dimen/D_14dp"
                    android:padding="@dimen/D_2dp"
                    android:src="@drawable/ic_favourite" />

                <com.riyadhbank.Custom.RBRegularTextView
                    android:id="@+id/txt_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/favourite"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/D_12dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>